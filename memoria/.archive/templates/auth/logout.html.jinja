{% extends "base.html.jinja" %}
{% block title %}
    Logged Out
{% endblock title %}
{% block content %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="text-center">You have been logged out</h3>
                    </div>
                    <div class="card-body text-center">
                        <p>Thank you for visiting. You have successfully logged out.</p>
                        {# Link to the login page #}
                        <p>
                            <a href="{{ url('login') }}">Click here to log in again.</a>
                        </p>
                        {# Use the 'login' URL name #}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock content %}
