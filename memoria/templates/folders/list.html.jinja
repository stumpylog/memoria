{% extends "base.html.jinja" %}
{% block title %}
    {{ title }}
{% endblock title %}
{% block content %}
    {% include "partials/navbar.html.jinja" %}
    <div class="container mt-5">
        <h1 class="mb-4">Image Folders</h1>
        <p class="lead">View and manage your photo folders.</p>
        <div class="row">
            {% for folder in folders %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ folder.name }}</h5>
                            {# Display the description if it exists, using linebreaksbr filter #}
                            {% if folder.description %}<p class="card-text">{{ folder.description|linebreaksbr }}</p>{% endif %}
                            <p class="card-text">Contains {{ folder.get_children_count() }} folders(s)</p>
                            <p class="card-text">Contains {{ folder.images.count() }} image(s)</p>
                            <a href="{{ url('image_folder_detail', pk=folder.pk) }}"
                               class="btn btn-primary">View Folders</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <p>No image folders found.</p>
                </div>
            {% endfor %}
            {# Add a card for creating a new folder? #}
        </div>
    </div>
{% endblock content %}
