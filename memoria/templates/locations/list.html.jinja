{# In your locations/list.html.jinja file #}
{% extends "base.html.jinja" %}
{% block title %}
    {{ title }}
{% endblock title %}
{% block content %}
    {% include "partials/navbar.html.jinja" %}
    {# Assuming you have a navbar partial #}
    <div class="container mt-5">
        <h1 class="mb-4">Locations</h1>
        <p class="lead">Browse photos by location.</p>
        {# Check if there are any locations to display #}
        {% if images %}
            <div class="row">
                {# Loop through the paginated locations #}
                {% for location in images %}
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            {# h-100 for equal height cards #}
                            <div class="card-body">
                                {# Display the location using the model property #}
                                <h5 class="card-title">{{ location.full_location_display }}</h5>
                                {# Placeholder for image count - replace with actual count if available via a model relation #}
                                <p class="card-text">Photo count not shown here.</p>
                                {# Link to a potential detail page for this location - replace '#' with your URL pattern #}
                                {# Example if you have a URL named 'location_detail' that takes the location's primary key #}
                                {# <a href="{% url 'location_detail' location.pk %}"
    class="btn btn-primary">View Photos</a> #}
                                <a href="{{ url('location_detail', pk=location.pk) }}"
                                   class="btn btn-primary">View Photos</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            {# Message to display if no locations are found #}
            <p>No locations found.</p>
        {% endif %}
    </div>
{% endblock content %}
