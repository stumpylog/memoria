{% macro nav_link(endpoint, text, icon) %}
    {% set is_active = request.resolver_match.url_name == endpoint %}
    <li class="nav-item">
        <a class="nav-link {% if is_active %}active{% endif %}"
           {% if is_active %}aria-current="page"{% endif %}
           href="{{ url(endpoint) }}">
            <i class="bi bi-{{ icon }}"></i> {{ text }}
        </a>
    </li>
{% endmacro %}
{% block extra_head %}
    <link href="{{ static('bootstrap-icons/bootstrap-icons.min.css') }}"
          rel="stylesheet">
{% endblock extra_head %}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand d-flex align-items-center me-3"
           href="{{ url('home') }}">
            <!-- Inline SVG slide logo -->
            <svg xmlns="http://www.w3.org/2000/svg"
                 width="32"
                 height="32"
                 viewBox="0 0 64 64"
                 class="me-2">
                <rect x="8" y="8" width="48" height="48" rx="4" ry="4" fill="#f4f4f4" stroke="#999" stroke-width="2" />
                <rect x="20" y="20" width="24" height="24" fill="#90a4ae" stroke="#555" stroke-width="1" />
                <circle cx="16" cy="16" r="2" fill="#bbb" />
                <rect x="12" y="12" width="40" height="6" fill="#ddd" />
                <text x="32" y="17" text-anchor="middle" font-size="5" fill="#777" font-family="sans-serif">MEMORIA</text>
            </svg>
            <span class="fw-bold">Memoria</span>
        </a>
        <button class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent"
                aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                {{ nav_link('home', 'Home', 'house') }}
                {{ nav_link('images', 'Images', 'grid-3x3') }}
                {{ nav_link('sources', 'Sources', 'folder') }}
                {{ nav_link('albums', 'Albums', 'collection') }}
                {{ nav_link('people', 'People', 'people') }}
                {{ nav_link('locations', 'Locations', 'geo-alt') }}
                {{ nav_link('dates', 'Dates', 'calendar3') }}
            </ul>
            <ul class="navbar-nav ms-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle"
                       href="#"
                       id="navbarDropdown"
                       role="button"
                       data-bs-toggle="dropdown"
                       aria-expanded="false">
                        <i class="bi bi-person-circle"></i> {{ user.username }}
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end"
                        aria-labelledby="navbarDropdown">
                        <li>
                            <a class="dropdown-item {% if request.resolver_match.url_name == 'profile' %}active{% endif %}"
                               {% if request.resolver_match.url_name == 'profile' %}aria-current="page"{% endif %}
                               href="{{ url('profile') }}"><i class="bi bi-person"></i> Profile</a>
                        </li>
                        <li>
                            <a class="dropdown-item {% if request.resolver_match.url_name == 'settings' %}active{% endif %}"
                               {% if request.resolver_match.url_name == 'settings' %}aria-current="page"{% endif %}
                               href="{{ url('settings') }}"><i class="bi bi-gear"></i> Settings</a>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li>
                            <form action="{{ url('logout') }}" method="post" class="dropdown-item p-0">
                                {% csrf_token %}
                                <button type="submit"
                                        class="btn btn-link text-decoration-none px-3 py-2 w-100 text-start">
                                    <i class="bi bi-box-arrow-right"></i> Logout
                                </button>
                            </form>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</nav>
