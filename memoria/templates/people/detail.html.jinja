{% extends "base.html.jinja" %}
{% block title %}
    {{ person.name }} - Details
{% endblock title %}
{% block content %}
    {# Include the navigation bar. Assuming partials/navbar.html.jinja exists #}
    {% include "partials/navbar.html.jinja" %}
    <div class="container mt-5">
        {{ bootstrap_messages() }}
        <h1 class="mb-4">{{ person.name }}</h1>
        <p class="text-muted">Last modified: {{ person.modified.astimezone(user.profile.timezone) | date("F d, Y P") }}</p>
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Update Person</h5>
                <form method="post" action="{{ url('person_detail', pk=person.pk) }}">
                    {% csrf_token %}
                    <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
                    {{ bootstrap_form(edit_person_form) }}
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </form>
            </div>
        </div>
    </div>
{% endblock content %}
