{% extends "base.html.jinja" %}
{% block title %}
    Image Detail for {{ image.original_path.stem }}
{% endblock title %}
{% block content %}
    {% include "partials/navbar.html.jinja" %}
    <div class="container mt-4">
        <h1>Image Details</h1>
        <div class="row">
            <div class="col-md-8">
                {# Display the main image #}
                {% if image.full_size_url %}
                    {# Assuming your Image model has a 'url' attribute for the full image #}
                    <div class="text-center mb-4">
                        <img src="{{ image.full_size_url }}"
                             class="img-fluid"
                             alt="{{ image.image_fs_id }}"
                             height="{{ image.height }}"
                             width="{{ image.width }}">
                    </div>
                {% else %}
                    <div class="alert alert-warning" role="alert">Full image not available.</div>
                {% endif %}
            </div>
            <div class="col-md-4">
                <h2>{{ image.original_path.stem }}</h2>
                {% if image.description %}
                    <p>{{ image.description }}</p>
                {% else %}
                    <p class="text-muted small">No description available.</p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock content %}
